<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/bookDetailContracted"
        motion:constraintSetStart="@id/bookDetailExpanded"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/bookExpandedCover" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/bookExpandedTitleAndButtons" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="1"
                motion:motionTarget="@+id/bookDetailToolbar" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/bookDetailExpanded">
        <Constraint
            android:id="@id/guideBackgroundTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.42" />

        <Constraint
            android:id="@id/guideCoverTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.12" />

        <Constraint
            android:id="@id/bookDetailExpansionBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:barrierAllowsGoneWidgets="true"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="bookExpandedTitleAndButtons,guideBackgroundTop" />

        <Constraint
            android:id="@id/bookDetailContractedTitleAndButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/bookDetailToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/bookExpandedTitleAndButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/bookExpandedCover" />

        <Constraint
            android:id="@id/bookExpandedCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            android:translationY="0dp"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.36"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/guideCoverTop"
            motion:layout_constraintWidth_percent="0.5" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/bookDetailContracted">
        <Constraint
            android:id="@id/guideCoverTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.0" />

        <Constraint
            android:id="@id/guideBackgroundTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.12" />

        <Constraint
            android:id="@id/bookDetailExpansionBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:barrierAllowsGoneWidgets="true"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="bookExpandedTitleAndButtons,guideBackgroundTop" />

        <Constraint
            android:id="@id/bookDetailContractedTitleAndButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/bookDetailToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/bookExpandedCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:translationY="-100dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/guideCoverTop"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.36"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintWidth_percent="0.5" />

        <Constraint
            android:id="@id/bookExpandedTitleAndButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/bookExpandedCover"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>
</MotionScene>