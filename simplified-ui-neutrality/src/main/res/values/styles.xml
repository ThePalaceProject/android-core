<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <color name="neutralColorPrimaryLight">#E0E1E1</color>
  <color name="neutralColorPrimary">@color/neutralColor</color>
  <color name="neutralColorPrimaryDark">@color/neutralColor</color>
  <color name="neutralColorDisabled">@color/neutralColorShade</color>
  <color name="neutralColorBackground">#ffffff</color>
  <dimen name="neutralButtonCornerRadius">6dp</dimen>
  <dimen name="neutralButtonVerticalPadding">8dp</dimen>
  <dimen name="neutralButtonHorizontalPadding">16dp</dimen>

  <!--
    A theme that makes the activity pure white and hides the action bar.
  -->

  <style name="NeutralBlank" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@drawable/neutral_blank</item>
    <item name="android:fontFamily">@font/open_sans_regular</item>
  </style>

  <!--
    The default theme that has no action bar.
  -->

  <style name="NeutralTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:fontFamily">@font/open_sans_regular</item>

    <item name="colorPrimary">@color/neutralColorPrimary</item>
    <item name="colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="colorAccent">@color/neutralColorPrimaryDark</item>
    <item name="colorControlNormal">@color/neutralColorPrimary</item>

    <item name="android:colorPrimary">@color/neutralColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="android:colorAccent">@color/neutralColorPrimaryDark</item>

    <item name="android:actionBarStyle">@style/Neutral.ActionBar</item>
    <item name="android:alertDialogStyle">@style/NeutralAlertDialog</item>
    <item name="android:alertDialogTheme">@style/NeutralAlertDialog</item>
    <item name="android:buttonStyle">@style/NeutralButton</item>
    <item name="android:dialogTheme">@style/NeutralDialog</item>
    <item name="android:editTextStyle">@style/NeutralEditText</item>
    <item name="android:windowBackground">@color/neutralColorBackground</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
  </style>

  <!--
    The default theme that has an action bar.
  -->

  <style name="NeutralTheme_ActionBar" parent="Theme.AppCompat.Light">
    <item name="android:fontFamily">@font/open_sans_regular</item>

    <item name="colorPrimary">@color/neutralColorPrimary</item>
    <item name="colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="colorAccent">@color/neutralColorPrimaryDark</item>
    <item name="colorControlNormal">@color/neutralColorPrimary</item>

    <item name="android:colorPrimary">@color/neutralColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="android:colorAccent">@color/neutralColorPrimaryDark</item>

    <item name="android:actionBarStyle">@style/Neutral.ActionBar</item>
    <item name="android:alertDialogStyle">@style/NeutralAlertDialog</item>
    <item name="android:alertDialogTheme">@style/NeutralAlertDialog</item>
    <item name="android:buttonStyle">@style/NeutralButton</item>
    <item name="android:dialogTheme">@style/NeutralDialog</item>
    <item name="android:editTextStyle">@style/NeutralEditText</item>
    <item name="android:windowBackground">@color/neutralColorBackground</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
  </style>

  <!-- Empty root style; for nesting. -->

  <style name="Neutral" />

  <!-- Action Bar -->

  <style name="Neutral.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="android:fontFamily">@font/open_sans_regular</item>

    <item name="android:background">#ffffff</item>
    <item name="android:displayOptions">homeAsUp|showTitle</item>
    <item name="titleTextAppearance">@style/Neutral.Toolbar.Title</item>
    <item name="subtitleTextAppearance">@style/Neutral.Toolbar.Subtitle</item>
    <item name="popupTheme">@style/Neutral.Toolbar.PopupTheme</item>
  </style>

  <!-- Toolbar -->

  <style name="Neutral.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar" />

  <style name="Neutral.Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light" />

  <style name="Neutral.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    <item name="android:textColor">@color/neutralColor</item>
    <item name="android:fontFamily">@font/open_sans_regular</item>
  </style>

  <style name="Neutral.Toolbar.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    <item name="android:textColor">@color/neutralColor</item>
    <item name="android:fontFamily">@font/open_sans_regular</item>
  </style>

  <!-- Bottom Navigation -->

  <style name="Neutral.BottomNav">
    <item name="itemTextAppearanceActive">@style/Neutral.BottomNav.TextAppearance.Active</item>
    <item name="itemTextAppearanceInactive">@style/Neutral.BottomNav.TextAppearance.Inactive</item>
  </style>

  <style name="Neutral.BottomNav.TextAppearance">
    <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
  </style>

  <style name="Neutral.BottomNav.TextAppearance.Active" />

  <style name="Neutral.BottomNav.TextAppearance.Inactive" />

  <!-- Widgets -->

  <style name="NeutralButton" parent="@android:style/Widget.Button">
    <item name="android:background">@drawable/neutral_button</item>
    <item name="android:textColor">@drawable/neutral_button_text</item>
    <item name="android:textSize">12sp</item>

    <!--
      The scroll indicator will briefly appear on programmatically created buttons unless the
      'scrollbars' attribute is set to 'none'.
    -->
    <item name="android:scrollbars">none</item>
  </style>

  <style name="NeutralAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:colorPrimary">@color/neutralColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="android:colorAccent">@color/neutralColorPrimaryDark</item>
  </style>

  <style name="NeutralDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:colorPrimary">@color/neutralColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="android:colorAccent">@color/neutralColorPrimaryDark</item>
    <item name="android:buttonStyle">@style/NeutralButton</item>
  </style>

  <style name="NeutralEditText" parent="Widget.AppCompat.EditText">
    <item name="android:colorPrimary">@color/neutralColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/neutralColorPrimaryDark</item>
    <item name="android:colorAccent">@color/neutralColorPrimaryDark</item>
    <item name="android:textColor">@color/neutralColorPrimary</item>
    <item name="android:textColorHint">@color/neutralColorPrimaryDark</item>
    <item name="colorAccent">@color/neutralColorPrimary</item>
    <item name="colorControlActivated">@color/neutralColorPrimary</item>
    <item name="colorControlNormal">@color/neutralColorPrimary</item>
  </style>

  <!-- Login screen lock form overlay -->
  <color name="lock_form_overlay">#b3ffffff</color>

  <!-- Edit text default Style -->
  <style name="hs_editText_defaultStyle">
    <item name="android:inputType">textCapSentences</item>
  </style>

  <!-- Edit text Style in new user and new issue screen -->
  <style name="hs_editTextStyle" parent="@style/hs_editText_defaultStyle" />

</resources>
