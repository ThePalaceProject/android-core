<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/neutralButtonHorizontalPadding"
        android:top="@dimen/neutralButtonVerticalPadding"
        android:right="@dimen/neutralButtonHorizontalPadding"
        android:bottom="@dimen/neutralButtonVerticalPadding" />
      <corners android:radius="@dimen/neutralButtonCornerRadius" />
      <solid android:color="@color/neutralColorBackground" />
      <stroke
        android:width="1dp"
        android:color="@color/neutralColorDisabled" />
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/neutralButtonHorizontalPadding"
        android:top="@dimen/neutralButtonVerticalPadding"
        android:right="@dimen/neutralButtonHorizontalPadding"
        android:bottom="@dimen/neutralButtonVerticalPadding" />
      <corners android:radius="@dimen/neutralButtonCornerRadius" />
      <solid android:color="@color/neutralColorPrimary" />
      <stroke
        android:width="1dp"
        android:color="@color/neutralColorBackground" />
    </shape>
  </item>

  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/neutralButtonHorizontalPadding"
        android:top="@dimen/neutralButtonVerticalPadding"
        android:right="@dimen/neutralButtonHorizontalPadding"
        android:bottom="@dimen/neutralButtonVerticalPadding" />
      <corners android:radius="@dimen/neutralButtonCornerRadius" />
      <solid android:color="@color/neutralColorBackground" />
      <stroke
        android:width="1dp"
        android:color="@color/neutralColorPrimary" />
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/neutralButtonHorizontalPadding"
        android:top="@dimen/neutralButtonVerticalPadding"
        android:right="@dimen/neutralButtonHorizontalPadding"
        android:bottom="@dimen/neutralButtonVerticalPadding" />
      <corners android:radius="@dimen/neutralButtonCornerRadius" />
      <solid android:color="@color/neutralColorBackground" />
      <stroke
        android:width="1dp"
        android:color="@color/neutralColorPrimary" />
    </shape>
  </item>

</selector>
