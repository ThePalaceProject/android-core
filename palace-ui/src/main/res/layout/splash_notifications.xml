<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splashNotificationsImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="64dp"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/bell_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/splashNotificationsTextScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/splashNotificationsButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splashNotificationsImage">

        <TextView
            android:id="@+id/splashNotificationsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/splashNotificationsText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/splashNotificationsButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/splashNotificationsHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/splashNotificationsAllow"
            style="@style/Palace.Button.Contained.Medium"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/splashNotificationsAllow" />

        <Space
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/splashNotificationsSkip"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/splashNotificationsSkip" />

    </LinearLayout>

    <TextView
        android:id="@+id/splashNotificationsHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:gravity="center"
        android:text="@string/splashNotificationsTextHint"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>