<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/splashNotificationsImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/bell_on" />

        <TextView
            android:id="@+id/splashNotificationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:gravity="center"
            android:text="@string/splashNotificationsText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/splashNotificationsButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/splashNotificationsAllow"
                style="@style/Palace.Button.Contained.Medium"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/splashNotificationsAllow" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/splashNotificationsSkip"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/splashNotificationsSkip" />

        </LinearLayout>

        <TextView
            android:id="@+id/splashNotificationsHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:gravity="center"
            android:text="@string/splashNotificationsTextHint"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>