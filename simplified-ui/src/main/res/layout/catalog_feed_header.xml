<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/catalogFeedHeaderTabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catalogFeedHeaderFacets"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catalogFeedHeaderTabs">

        <TextView
            android:id="@+id/catalogFeedHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/catalogPlaceholder"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/catalogFeedFacetSort"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/catalogFeedFacetSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/catalogFeedFacetFilter"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:clickable="false"
                android:focusable="false"
                app:srcCompat="@drawable/arrow_up_arrow_down" />

            <TextView
                android:id="@+id/catalogFeedFacetSortText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Recently Added (A-Z)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/catalogFeedFacetFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:clickable="false"
                android:focusable="false"
                app:srcCompat="@drawable/bars_filter" />

            <TextView
                android:id="@+id/catalogFeedFacetFilterText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Filter (2)" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/catalogFeedDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catalogFeedHeaderFacets" />

</androidx.constraintlayout.widget.ConstraintLayout>
